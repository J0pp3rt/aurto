# Maintainer: J0pp3rt
pkgname=aurto
pkgver=0.12.9
pkgrel=1
pkgdesc="An AUR tool for managing an auto-updating local 'aurto' package repository using aurutils."
arch=('x86_64' 'aarch64' 'armv7h')
url="https://github.com/j0pp3rt/aurto"
license=('MIT')
depends=('aurutils'
         'devtools'
         'systemd'
         'pacutils'
         'pacman-contrib'
         'curl'
         'less'
         'sudo'
         'zstd'
         'ninja')
optdepends=()
makedepends=('cargo')
install="aurto.install"
source=("$pkgname-$pkgver.tar.gz::https://github.com/J0pp3rt/$pkgname/archive/v$pkgver.tar.gz")
sha256sums=('SKIP')
backup=('usr/lib/systemd/system/check-aurto-git-trigger.timer'
        'usr/lib/systemd/system/update-aurto.timer'
        'usr/lib/systemd/system/update-aurto-startup.timer'
        'etc/aurto/pacman-chroot.conf'
        'etc/aurto/makepkg-chroot.conf')

build() {
  cd "$pkgname-$pkgver"
  make
}

package() {
  cd "$pkgname-$pkgver"
  cp -r target/* "$pkgdir"/
}
